<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@drawable/corners2">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button
                android:id="@+id/noRepeat"
                android:background="@drawable/orange_btn"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Не повторяется"
                android:textColor="@android:color/black" />

            <Button
                android:id="@+id/dayRepeat"
                android:layout_width="200dp"
                android:background="@drawable/orange_btn"
                android:layout_height="wrap_content"
                android:layout_below="@id/noRepeat"
                android:layout_centerHorizontal="true"
                android:text="Каждый день"
                android:textColor="@android:color/black" />

            <Button
                android:id="@+id/weekRepeat"
                android:layout_width="200dp"
                android:background="@drawable/orange_btn"
                android:layout_height="wrap_content"
                android:layout_below="@id/dayRepeat"
                android:layout_centerHorizontal="true"
                android:text="Каждую неделю"
                android:textColor="@android:color/black" />

            <Button
                android:id="@+id/monthRepeat"
                android:layout_width="200dp"
                android:background="@drawable/orange_btn"
                android:layout_height="wrap_content"
                android:layout_below="@id/weekRepeat"
                android:layout_centerHorizontal="true"
                android:text="Каждый месяц"
                android:textColor="@android:color/black" />

            <Button
                android:id="@+id/yearRepeat"
                android:layout_width="200dp"
                android:background="@drawable/orange_btn"
                android:layout_height="wrap_content"
                android:layout_below="@id/monthRepeat"
                android:layout_centerHorizontal="true"
                android:text="Каждый год"
                android:textColor="@android:color/black" />

            <Button
                android:id="@+id/otherRepeat"
                android:layout_width="200dp"
                android:background="@drawable/orange_btn"
                android:layout_height="wrap_content"
                android:layout_below="@id/yearRepeat"
                android:layout_centerHorizontal="true"
                android:text="Другое..."
                android:textColor="@android:color/black" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
